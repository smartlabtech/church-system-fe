# Docker Environment Variables Template
# Copy this file to .env in your deployment directory and customize the values

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Application Settings
APP_NAME=Church System
PORT=3041

# Database
DB_URI=mongodb://username:password@host:port/database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=14d

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://your-domain.com

# ============================================
# EMAIL CONFIGURATION (Gmail)
# ============================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true
GMAIL_USER=your-email@gmail.com
GMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Church System <your-email@gmail.com>

# ============================================
# SMS CONFIGURATION
# ============================================

# SMS Misr OTP Service
SMS_MISR_OTP_USERNAME=your-username
SMS_MISR_OTP_PASSWORD=your-password
SMS_MISR_OTP_TEMPLATE=your-template-id
SMS_MISR_OTP_SENDER=your-sender-name

# SMS Misr Regular Service
SMS_MISR_USERNAME=your-username
SMS_MISR_PASSWORD=your-password
SMS_MISR_SENDER=your-sender-name
SMS_MISR_ENVIRONMENT=1

# Victory Link SMS Service
SMS_VICTORY_USERNAME=your-username
SMS_VICTORY_PASSWORD=your-password
SMS_VICTORY_SENDER=your-sender-name
SMS_VICTORY_LANG=ar

# ============================================
# FRONTEND CONFIGURATION (Runtime)
# ============================================
# These variables are injected into the frontend at runtime
# The backend should generate env-config.js with these values

# API Base URL (relative path for same-domain deployment)
FRONTEND_API_BASE_URL=/api/ar

# Church ID
FRONTEND_CHURCH_ID=63cd11f4808cc1923ca5f3ca
